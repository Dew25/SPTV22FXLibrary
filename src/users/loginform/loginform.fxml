<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vbLoginFormRoot" alignment="CENTER_RIGHT" prefHeight="180.0" prefWidth="401.0" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="users.loginform.LoginformController">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="10.0" />
   </padding>
   <children>
      <Label fx:id="lbLoginInfo" alignment="CENTER" prefHeight="29.0" prefWidth="321.0" text="Введите логин и пароль">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font size="18.0" />
         </font></Label>
      <HBox prefHeight="20.0" prefWidth="381.0" spacing="5.0">
         <children>
            <TextField fx:id="tfLogin" prefHeight="25.0" prefWidth="329.0">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox layoutX="20.0" layoutY="20.0" prefHeight="27.0" prefWidth="381.0" spacing="5.0">
         <children>
            <TextField fx:id="tfPassword" prefHeight="25.0" prefWidth="324.0" />
         </children>
      </HBox>
      <Button fx:id="btGoToLogin" alignment="CENTER" mnemonicParsing="false" onAction="#clickLogin" prefHeight="25.0" prefWidth="348.0" text="Войти">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></Button>
      
   </children>
</VBox>
